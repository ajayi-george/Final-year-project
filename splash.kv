
<SplashScreen>
    md_bg_color: app.colors.white
    MDLabel:
        text: "Auto Emailer"
        font_name: "Roboto-Bold"
        font_size: app.fonts.size.h2
        text_color: app.colors.primary
        theme_text_color: "Custom"
        halign: "center"
    MDSpinner:
        color: app.colors.orange
        palette:  [app.colors.secondary, app.colors.yellow,app.colors.primary]
        size_hint: None, None
        size: "200dp", "200dp"
        line_width: "3dp"
        pos_hint: {'center_x': .5, 'center_y': .5}


